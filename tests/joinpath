>>> (joinpath "abc/de/" "/fg/x.php")
"/fg/x.php"

>>> (joinpath "abc/de" "fg/x.php")
"abc/de/fg/x.php"

>>> (joinpath "abc/de/" "fg/x.php")
"abc/de/fg/x.php"

>>> (joinpath "abc/de/" "fg/x.php")
"abc/de/fg/x.php"


>>> (joinpath "foo" "bar")
"foo/bar"

>>> (joinpath "foo/" "bar")
"foo/bar"

>>> (joinpath "/foo" "bar")
"/foo/bar"

>>> (joinpath "foo" "/bar")
"/bar"

>>> (joinpath "foo/" "/bar")
"/bar"
